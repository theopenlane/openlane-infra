{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":gitSignOff"
  ],
  "labels": ["dependencies"],
  "packageRules": [
        {
            "groupName": "all patch dependencies",
            "groupSlug": "all-patch",
            "matchPackageNames": [
                "*"
            ],
            "matchUpdateTypes": [
                "patch"
            ]
        }
    ],
  "postUpdateOptions": ["helmUpdateSubChartArchives"],
  "postUpgradeTasks": {
    "description": "Regenerate Helm documentation after chart dependency updates",
    "fileFilters": ["charts/**"],
    "commands": ["./scripts/renovate-docs.sh"],
    "executionMode": "branch"
  }
}
